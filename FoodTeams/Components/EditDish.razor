@page "/EditDish"
@using FoodTeams.Entities
@using FoodTeams.Services
@inject DishService service
@inject OrderService Service
@inject NavigationManager UriHelper



<head>
	<style>
		table,
		th,
		td {
			border: 1px solid black;
			border-collapse: collapse;
		}

		th,
		td {
			padding: 20px;
		}

		th {
			text-align: left;
		}
	</style>
</head>

<body>

	<h2 style="text-align:center">ORDER</h2>

	<table style="width:100%">
		<tr>
			<th>Id</th>
			<th>Restaurant Name</th>
			<th>Menu link</th>
			<th>Minimal price</th>
			<th>Delivery price</th>
			<th>Free delivery price</th>
			<th>Blik number</th>
		</tr>
		<tr>
			<td>@Service.Order.Id</td>
			<td>@Service.Order.RestaurantName</td>
			<td><a href="@Service.Order.MenuLink" target="_blank">Click</a></td>
			<td>@Service.Order.MinPrice</td>
			<td>@Service.Order.DeliveryPrice</td>
			<td>@Service.Order.FreeDeliveryPrice</td>
			<td>@Service.Order.BLIKNumber</td>
		</tr>
	</table>

	<h1 style="text-align:center">Edit Dish</h1>

	<table style="width:100%">
		<tr>
			<th>Id</th>
			<th>Description</th>
			<th>Extras</th>
			<th>Price</th>
			<th>UserId</th>
		</tr>

		<tr>
			<td>@service.dish.Id</td>
			<td>@service.dish.Description</td>
			<td>@service.dish.Extras</td>
			<td>@service.dish.Price</td>
			<td>@service.dish.UserId</td>
		</tr>
	</table>

	<input placeholder="Description" @bind="Description" />
	<input placeholder="Extras" @bind="Extras" />
	<label for="Price">Price:</label>
	<input id="Price" type="number" min="0" placeholder="Price" @bind="Price" />
	<label for="UserId">User Id:</label>
	<input id="UserId" type="number" min="0" placeholder="UserId" @bind="UserId" />
	<button @onclick="()=>UpdateDish()">Edit dish</button>

	<br />

	<button style="text-align:center; height:30px; width:150px ;margin:20px" @onclick="NavigateToPrevious">Back</button>
	<button style="text-align:center; height:30px; width:150px ;margin:20px" @onclick="NavigateToMainMenu">Main menu</button>
</body>




@code {

	public void NavigateToPrevious()
	{
		UriHelper.NavigateTo("/ActiveOrderDishes");
	}

	
	public void NavigateToMainMenu()
	{
		UriHelper.NavigateTo("/Welcome");
	}

	public void UpdateDish()
	{
		service.EditDish(Description, Extras, Price, UserId);
		UriHelper.NavigateTo("/ActiveOrderDishes");
	}
	public string Description { get; set; }
	public string Extras { get; set; }
	public decimal Price { get; set; }
	public long UserId { get; set; }

}
